<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cl_list_marca"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MarcaListView">

    <!-- Título -->
    <TextView
        android:id="@+id/txt_view_marca"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MARCAS"
        android:textSize="25sp"
        android:textStyle="bold"
        android:textColor="#FF5722"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <!-- ListView para mostrar las marcas -->
    <ListView
        android:id="@+id/lv_lista_marcas"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/txt_view_marca"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/btn_agregar_marca"
        android:layout_margin="16dp" />

    <!-- Botón para agregar marcas -->
    <Button
        android:id="@+id/btn_agregar_marca"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Agregar Marca"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="16dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
